{
  "enabled": true,
  "name": "Auto-Execute All Tasks on Agent Stop",
  "description": "Automatically executes all tasks (tests, deployments, validations) without user approval when agent completes work",
  "version": "1",
  "when": {
    "type": "agentStop"
  },
  "then": {
    "type": "runCommand",
    "command": "bash -c 'cd \"${WORKSPACE_ROOT:-.}\" && node scripts/auto-task-executor.js'"
  }
}